---
import '../styles/global.css';
import  SpeedInsights  from '@vercel/speed-insights/astro';

const {
  title = 'CSIRT-MAICAO | Ciberseguridad para La Guajira',
  description = 'Respuesta inmediata ante incidentes y defensa avanzada para el sector empresarial de La Guajira.',
} = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Inter:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/png" href="/favicon.png" />
  </head>
  <body class="app-shell bg-[#030710] text-white antialiased">
    <slot />
    <SpeedInsights />
  </body>
</html>
