---
import BaseLayout from '../layouts/BaseLayout.astro';
import { navLinks, heroMetrics, experts, serviceCards, testimonials } from '../data/siteData';
import logoCsirt from '../assets/img/logo-csirt-maicao.png';
import whatsappQr from '../assets/img/whatsapp-qr.jpg';

type Testimonial = (typeof testimonials)[number];

const services = serviceCards;
const clientVoices = testimonials as Testimonial[];

const heroCopy = {
  title: 'Ciberseguridad para el comercio que mueve La Guajira',
  description:
    'Protegemos el corazón digital de las MiPymes de La Guajira con soluciones de ciberseguridad avanzadas, asequibles y adaptadas al comercio fronterizo.',
};
---

<BaseLayout>
  <div class="min-h-screen bg-gradient-to-b from-[#f8fdf3] via-white to-[#f3f7ff] text-[#0f1d2b]">
    <header class="border-b border-green-100/60 bg-white/80 backdrop-blur-sm">
      <input id="nav-toggle" type="checkbox" class="peer hidden" />
      <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4 sm:px-6">
        <a href="/" class="flex items-center gap-3 font-semibold text-green-700">
          <img src={logoCsirt.src} alt="Logo CSIRT-MAICAO" class="h-8 w-8 object-contain" loading="lazy" />
          <span class="text-base tracking-wide sm:text-lg">CSIRT-MAICAO</span>
        </a>

        <label
          for="nav-toggle"
          class="inline-flex items-center justify-center rounded-full border border-green-200 bg-white px-3 py-2 text-sm font-semibold text-[#1f2c3a] shadow-sm shadow-green-100 transition hover:border-green-400 hover:text-green-700 lg:hidden"
        >
          <span class="sr-only">Abrir menú</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </label>

        <nav class="hidden items-center gap-6 text-sm font-medium text-[#1f2c3a] lg:flex lg:text-base">
          {navLinks.map((item) => (
            <a href={item.href} class="transition hover:text-green-700">
              {item.label}
            </a>
          ))}
        </nav>

        <a
          href="#contact-section"
          class="hidden rounded-full bg-green-600 px-4 py-2 text-sm font-semibold text-white shadow-lg shadow-green-500/30 transition hover:bg-green-700 lg:inline-flex"
        >
          Solicitar Consulta
        </a>
      </div>
      <div class="hidden border-t border-green-100/70 bg-white/95 px-4 pb-4 pt-2 text-sm font-medium text-[#1f2c3a] shadow-inner shadow-green-50 peer-checked:block sm:px-6 lg:hidden">
        <div class="flex flex-col gap-3">
          {navLinks.map((item) => (
            <a href={item.href} class="rounded-xl border border-transparent px-3 py-2 transition hover:border-green-200 hover:bg-green-50 hover:text-green-700">
              {item.label}
            </a>
          ))}
          <a href="#contact-section" class="rounded-full bg-green-600 px-4 py-2 text-center font-semibold text-white shadow-lg shadow-green-500/30 transition hover:bg-green-700">
            Solicitar Consulta
          </a>
        </div>
      </div>
    </header>

    <main class="mx-auto max-w-6xl space-y-16 px-4 py-12 sm:space-y-20 sm:px-6 sm:py-16">
      <section id="hero-section" class="mx-auto grid max-w-6xl grid-cols-1 gap-10 lg:grid-cols-[1.1fr_0.9fr] lg:items-center">
        <div class="space-y-8">
        <div class="space-y-4 max-w-2xl">
          <p class="inline-flex items-center rounded-full bg-green-50 px-3 py-1 text-sm font-medium text-green-700">
            Defensa proactiva para MiPymes
          </p>
          <h1 class="text-3xl font-semibold leading-tight text-slate-900 sm:text-5xl">
            {heroCopy.title}
          </h1>
          <p class="text-base text-slate-700 sm:text-lg leading-relaxed">{heroCopy.description}</p>
        </div>

        <div class="flex flex-wrap gap-3">
          <a
            href="#contact-section"
            class="rounded-full bg-green-600 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-green-500/40 transition hover:bg-green-700 sm:text-base"
          >
            Solicitar Consulta Gratuita
          </a>
          <a
            href="#services-section"
            class="rounded-full border border-[#cad3df] bg-white px-6 py-3 text-sm font-semibold text-[#1f2c3a] transition hover:border-green-600 hover:text-green-700 sm:text-base"
          >
            Ver Servicios
          </a>
        </div>

        <div class="flex flex-wrap gap-6 rounded-2xl border border-white/80 bg-white/80 p-5 shadow-xl shadow-green-900/5">
          {heroMetrics.map((metric) => (
            <div class="flex flex-col" aria-label={metric.label}>
              <span class="text-xs text-[#7a8897] sm:text-sm">{metric.label}</span>
              <strong class="text-xl font-semibold text-[#0b1018] sm:text-2xl">{metric.value}</strong>
            </div>
          ))}
        </div>
        </div>

        <div class="relative">
          <div class="relative overflow-hidden rounded-3xl bg-gradient-to-br from-[#0b2c23] via-[#013727] to-[#062f40] p-10 shadow-2xl">
          <div class="absolute inset-6 rounded-2xl border border-white/10 bg-white/5 blur-2xl" aria-hidden="true" />

          <div class="relative space-y-8 text-white">
            <div class="mx-auto flex h-20 w-20 items-center justify-center rounded-2xl bg-white/10 text-green-200 ring-1 ring-white/20">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" viewBox="0 0 24 24" fill="currentColor">
                <path
                  d="M12 2l9 4v6c0 5.55-3.78 10.74-9 12-5.22-1.26-9-6.45-9-12V6l9-4zm0 2.18L5 6.82v4.95c0 4.38 2.84 8.61 7 9.95 4.16-1.34 7-5.57 7-9.95V6.82l-7-2.64z"
                />
                <path d="M12 7a5 5 0 015 5c0 4-5 7-5 7s-5-3-5-7a5 5 0 015-5zm0 2a3 3 0 00-3 3c0 2.1 2.1 4.28 3 5 0.9-.72 3-2.9 3-5a3 3 0 00-3-3z" />
              </svg>
            </div>
            <div class="space-y-4 text-center text-white">
              <p class="text-sm uppercase tracking-[0.3em] text-green-200">Protección Activa</p>
              <h2 class="text-3xl font-semibold text-white">Escudo Digital de La Guajira</h2>
              <p class="text-base text-white/80">
                Monitoreo continuo, inteligencia local y respuesta inmediata para amenazas que impactan a los negocios fronterizos.
              </p>
            </div>
            <div class="grid grid-cols-2 gap-4 text-center text-white">
              <div class="rounded-2xl bg-white/5 p-4 shadow-lg shadow-black/20">
                <p class="text-sm text-green-200">Cobertura</p>
                <p class="text-2xl font-semibold">24/7</p>
              </div>
              <div class="rounded-2xl bg-white/5 p-4 shadow-lg shadow-black/20">
                <p class="text-sm text-green-200">Respuesta</p>
                <p class="text-2xl font-semibold">12 min</p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section id="services-section" class="mx-auto max-w-6xl space-y-12">
        <div class="text-center">
          <p class="text-sm font-semibold uppercase tracking-[0.3em] text-green-600">Soluciones integrales</p>
          <h2 class="mt-3 text-3xl font-semibold text-slate-900 sm:text-4xl">Nuestros Servicios</h2>
          <p class="mx-auto mt-3 max-w-2xl text-base text-slate-700 sm:text-lg">
            Diseñados para proteger tu empresa con la misma precisión que un CSIRT de clase mundial.
          </p>
        </div>

        <div class="grid gap-8 md:grid-cols-2">
          {services.map((service) => {
            const cover = typeof service.image === 'string' ? service.image : service.image.src;
            return (
              <article class="overflow-hidden rounded-[30px] border border-[#dbe6dc] bg-white shadow-[0_35px_90px_rgba(10,35,20,0.12)]">
                <div class="relative h-56 w-full overflow-hidden">
                  <img src={cover} alt={service.title} class="h-full w-full object-cover" loading="lazy" />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent" aria-hidden="true" />
                </div>
                <div class="space-y-3 px-6 py-6 text-slate-800">
                  <div class="flex items-center gap-2 text-green-600">
                    <span class="flex h-9 w-9 items-center justify-center rounded-xl bg-green-50">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                        <path
                          d="M12 2l7 3v6c0 4.97-2.7 9.79-7 12-4.3-2.21-7-7.03-7-12V5l7-3zm0 2.18L7 6.09v4.91c0 3.73 1.99 7.5 5 9.41 3.01-1.91 5-5.68 5-9.41V6.09l-5-1.91z"
                        />
                      </svg>
                    </span>
                    <h3 class="text-lg font-semibold text-slate-900 sm:text-xl">{service.title}</h3>
                  </div>
                  <p class="text-sm font-semibold uppercase tracking-wider text-green-700">{service.summary}</p>
                  <p class="text-base leading-relaxed text-slate-700">{service.detail}</p>
                </div>
              </article>
            );
          })}
        </div>
      </section>

      <section class="mx-auto max-w-5xl rounded-[38px] border border-[#c8e2c4] bg-[#ecf7ea] px-10 py-12 shadow-[0_30px_90px_rgba(27,79,39,0.12)]">
        <div class="flex flex-col gap-6 md:flex-row md:items-start">
          <div class="flex h-16 w-16 items-center justify-center rounded-2xl bg-[#d7f2db] text-green-600 shadow-inner shadow-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M12 2l7 3v6c0 4.97-2.7 9.79-7 12-4.3-2.21-7-7.03-7-12V5l7-3zm0 2.18L7 6.09v4.91c0 3.73 1.99 7.5 5 9.41 3.01-1.91 5-5.68 5-9.41V6.09l-5-1.91z"
              />
              <path d="M12 7a4 4 0 110 8 4 4 0 010-8z" />
            </svg>
          </div>
          <div class="space-y-4 text-left">
            <h3 class="text-xl font-semibold text-[#132c1b] sm:text-2xl">Asesoría en Cumplimiento y Protección de Datos</h3>
            <p class="text-base text-[#3b4c42] sm:text-lg">
              Nuestro equipo no solo protege sus sistemas, sino que también asegura que su negocio opere en cumplimiento con la normativa
              colombiana de protección de datos (Ley 1581 de 2012). Basamos nuestras soluciones en estándares internacionales como ISO
              27001 para traducir requisitos legales complejos en acciones prácticas.
            </p>
            <p class="text-lg text-[#3b4c42]">
              Le ayudamos a proteger los datos de sus clientes y empleados, evitar sanciones de la Superintendencia de Industria y Comercio
              (SIC) y generar la confianza que su negocio necesita para crecer.
            </p>
          </div>
        </div>
      </section>

      <section id="testimonials-section" class="mx-auto max-w-6xl space-y-12 rounded-[40px] bg-[#eaf5ec] px-6 py-16 text-center shadow-[0_50px_90px_rgba(21,64,32,0.12)]">
        <a
          href="#contact-section"
          class="inline-flex items-center justify-center rounded-full bg-green-600 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-green-500/40 transition hover:bg-green-700"
        >
          Solicitar Información de Servicios
        </a>

        <div>
          <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#3a5a3c]">La voz de nuestros clientes</p>
          <h2 class="mt-3 text-3xl font-semibold text-slate-900 sm:text-4xl">Lo Que Dicen Nuestros Clientes</h2>
          <p class="mx-auto mt-3 max-w-2xl text-base text-slate-700 sm:text-lg">
            La confianza de nuestros clientes es nuestro mayor logro.
          </p>
        </div>

        <div class="grid gap-6 md:grid-cols-3">
          {clientVoices.map((testimonial) => (
            <article class="rounded-[26px] border border-[#d1e3d2] bg-white px-5 py-7 text-left shadow-[0_25px_70px_rgba(12,45,26,0.08)] sm:px-6 sm:py-8">
              <div class="mb-6 flex items-center justify-between text-green-600">
                <div class="flex gap-1">
                  {[...Array(5)].map(() => (
                    <span class="h-2.5 w-2.5 rounded-full bg-green-500" />
                  ))}
                </div>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M11 7h5l-3 10h4v2H9l3-10h-3z" />
                </svg>
              </div>
              <p class="text-sm italic text-slate-800 sm:text-base">"{testimonial.quote}"</p>
              <p class="mt-6 text-sm font-semibold text-slate-900 sm:text-base">{testimonial.name}</p>
              <p class="text-xs text-slate-700 sm:text-sm">
                {testimonial.role}
                {testimonial.company ? ` · ${testimonial.company}` : ''}
              </p>
            </article>
          ))}
        </div>
      </section>

      <section id="identity-section" class="mx-auto max-w-5xl rounded-[32px] border border-green-100 bg-[#eef6ea] px-8 py-14 text-center shadow-[0_30px_80px_rgba(22,101,52,0.08)]">
        <p class="text-sm font-semibold uppercase tracking-[0.3em] text-green-600">Compromiso Local</p>
        <h2 class="mt-3 text-3xl font-semibold text-slate-900 sm:text-4xl">Nuestra Identidad</h2>
        <p class="mt-2 text-base text-slate-700 sm:text-lg">
          Comprometidos con la seguridad digital de las empresas de La Guajira
        </p>

        <div class="mt-10 grid gap-6 md:grid-cols-2">
          <article class="rounded-3xl border border-[#3c6f42] bg-white px-6 py-8 text-left shadow-[0_20px_60px_rgba(18,60,30,0.08)]">
            <h3 class="text-xl font-semibold text-green-700 sm:text-2xl">Misión</h3>
            <p class="mt-4 text-slate-800">
              Proteger el corazón digital de las empresas de La Guajira, ofreciendo soluciones de ciberseguridad avanzadas, asequibles y
              adaptadas a la realidad del comercio fronterizo, garantizando la continuidad y confianza en sus operaciones.
            </p>
          </article>

          <article class="rounded-3xl border border-white bg-white px-6 py-8 text-left shadow-[0_18px_50px_rgba(13,51,26,0.06)]">
            <h3 class="text-xl font-semibold text-green-700 sm:text-2xl">Visión</h3>
            <p class="mt-4 text-[#2b3b33]">
              Para el año 2030, CSIRT-MAICAO se consolidará como la firma de ciberseguridad líder para las MiPymes en La Guajira,
              protegiendo activamente a más de 100 empresas en la región. Seremos reconocidos por ofrecer monitoreo especializado a nivel
              del Caribe y por formar talento local en alianza con instituciones educativas como el SENA.
            </p>
          </article>
        </div>
      </section>

      <section id="team-section" class="mx-auto max-w-6xl rounded-[40px] border border-[#c6e3c4] bg-[#e5f3e2] px-8 py-16 text-center shadow-[0_45px_90px_rgba(18,60,30,0.12)]">
        <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#2f4d30]">Expertos Certificados</p>
        <h2 class="mt-3 text-3xl font-semibold text-slate-900 sm:text-4xl">Conoce a los Expertos</h2>
        <p class="mx-auto mt-3 max-w-3xl text-base text-slate-700 sm:text-lg">
          Nuestro equipo de especialistas en compliance regulatorio protege los datos y sistemas de su empresa, garantizando el cumplimiento
          de normativas internacionales mientras mantiene su negocio seguro y operativo.
        </p>

        <div class="mt-12 grid gap-8 md:grid-cols-2 xl:grid-cols-4">
          {experts.map((person) => {
            const avatarSrc = typeof person.avatar === 'string' ? person.avatar : person.avatar.src;
            return (
              <article class="rounded-[32px] border border-white bg-white px-6 py-10 text-center shadow-[0_30px_70px_rgba(30,61,45,0.1)]">
                <img
                  src={avatarSrc}
                  alt={`Retrato de ${person.name}`}
                  class="avatar-size mx-auto rounded-full border-4 border-[#c8f2d2] object-cover shadow-lg shadow-[#2e7c4b]/20"
                />
                <h3 class="mt-6 text-xl font-semibold text-slate-900 sm:text-2xl">{person.name}</h3>
                <p class="text-sm font-medium uppercase tracking-wide text-green-600">{person.role}</p>

                <ul class="mt-4 flex flex-wrap justify-center gap-2">
                  {person.credentials.map((badge) => (
                    <li class="rounded-full bg-[#e8f8ea] px-3 py-1 text-xs font-semibold text-[#1f4e29]">
                      {badge}
                    </li>
                  ))}
                </ul>

                <p class="mt-5 text-sm text-slate-700">{person.bio}</p>
              </article>
            );
          })}
        </div>
      </section>

      <section id="contact-section" class="mx-auto max-w-6xl space-y-10 rounded-[42px] bg-[#f2f7f3] px-6 py-16 text-center shadow-[0_40px_80px_rgba(10,42,24,0.1)]">
        <div>
          <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#3c5a3f]">Contacto directo</p>
          <h2 class="mt-3 text-3xl font-semibold text-slate-900 sm:text-4xl">Contáctanos</h2>
          <p class="mx-auto mt-3 max-w-2xl text-base text-slate-700 sm:text-lg">
            ¿Listo para proteger tu empresa? Solicita una consulta gratuita y nuestro equipo responderá en menos de 12 horas.
          </p>
        </div>

        <div class="grid gap-8 md:grid-cols-[1.1fr_0.9fr] text-left">
          <form class="space-y-4 rounded-[30px] border border-[#d7e3da] bg-white px-8 py-10 shadow-[0_30px_70px_rgba(17,45,28,0.08)]">
            <div>
              <label class="text-sm font-semibold text-[#25332b]">
                Nombre Completo *
                <input
                  type="text"
                  placeholder="Juan Pérez"
                  class="mt-2 w-full rounded-2xl border border-[#dbe3db] px-4 py-3 text-base text-[#152017] shadow-inner shadow-[#e8f0ea]"
                  required
                />
              </label>
            </div>
            <div>
              <label class="text-sm font-semibold text-[#25332b]">
                Correo Electrónico *
                <input
                  type="email"
                  placeholder="juan@empresa.com"
                  class="mt-2 w-full rounded-2xl border border-[#dbe3db] px-4 py-3 text-base text-[#152017] shadow-inner shadow-[#e8f0ea]"
                  required
                />
              </label>
            </div>
            <div>
              <label class="text-sm font-semibold text-[#25332b]">
                Empresa
                <input
                  type="text"
                  placeholder="Mi Empresa S.A.S."
                  class="mt-2 w-full rounded-2xl border border-[#dbe3db] px-4 py-3 text-base text-[#152017] shadow-inner shadow-[#e8f0ea]"
                />
              </label>
            </div>
            <div>
              <label class="text-sm font-semibold text-[#25332b]">
                Teléfono
                <input
                  type="tel"
                  placeholder="+57 300 123 4567"
                  class="mt-2 w-full rounded-2xl border border-[#dbe3db] px-4 py-3 text-base text-[#152017] shadow-inner shadow-[#e8f0ea]"
                />
              </label>
            </div>
            <div>
              <label class="text-sm font-semibold text-[#25332b]">
                Mensaje *
                <textarea
                  placeholder="Cuéntanos cómo podemos ayudarte..."
                  class="mt-2 min-h-[140px] w-full rounded-2xl border border-[#dbe3db] px-4 py-3 text-base text-[#152017] shadow-inner shadow-[#e8f0ea]"
                  required
                />
              </label>
            </div>
            <button
              type="submit"
              class="w-full rounded-full bg-green-600 py-3 text-base font-semibold text-white shadow-lg shadow-green-500/40 transition hover:bg-green-700"
            >
              Enviar Mensaje
            </button>
          </form>

          <aside class="flex flex-col items-center justify-center gap-6 rounded-[30px] border border-[#d7e3da] bg-white px-6 py-10 text-center shadow-[0_30px_70px_rgba(17,45,28,0.08)]">
            <div class="space-y-2">
              <h3 class="text-xl font-semibold text-[#0f1d18] sm:text-2xl">Contacto por WhatsApp</h3>
              <p class="text-sm text-slate-700">Escanea el código QR para conectar con nuestro equipo de respuesta inmediata.</p>
            </div>
            <div class="rounded-3xl border-4 border-[#e7f3e6] bg-white shadow-lg shadow-[#0b1510]/10">
              <img
                src={whatsappQr.src}
                alt="Código QR de WhatsApp CSIRT-MAICAO"
                class="h-52 w-52 rounded-2xl bg-[#e5f3e2] p-3 object-contain"
                loading="lazy"
              />
            </div>
            <div class="text-sm text-slate-700">
              <p class="font-semibold text-slate-900">+57 300 123 4567</p>
              <p>Disponible 24/7 para incidentes críticos</p>
            </div>
          </aside>
        </div>
      </section>
    </main>
  </div>
  <footer class="mt-16 bg-[#0b3c1d] text-white sm:mt-20">
    <div class="mx-auto flex max-w-6xl flex-col gap-10 px-6 py-12 md:flex-row md:items-start md:justify-between">
      <div class="space-y-3">
        <div class="flex items-center gap-3 text-base font-semibold sm:text-lg">
          <img src={logoCsirt.src} alt="Logo CSIRT-MAICAO" class="h-8 w-8 object-contain" loading="lazy" />
          <span>CSIRT-MAICAO</span>
        </div>
        <p class="text-sm text-white/80">Ciberseguridad para el comercio que mueve La Guajira</p>
      </div>

      <div class="grid flex-1 gap-8 text-sm md:grid-cols-3">
        <div class="space-y-2">
          <p class="text-base font-semibold text-white">Navegación</p>
          <ul class="space-y-1 text-white/70">
            <li><a href="#hero-section" class="hover:text-white">Inicio</a></li>
            <li><a href="#identity-section" class="hover:text-white">Nosotros</a></li>
            <li><a href="#services-section" class="hover:text-white">Servicios</a></li>
            <li><a href="#testimonials-section" class="hover:text-white">Testimonios</a></li>
          </ul>
        </div>
        <div class="space-y-2">
          <p class="text-base font-semibold text-white">Servicios</p>
          <ul class="space-y-1 text-white/70">
            <li>Hardening de Sistemas</li>
